{
  "include": ["packages/*/src/**/*.ts"],

  "exclude": [
    "**/node_modules/**",
    "**/src/**/*.test.ts",
    "**/src/**/__tests__/**"
  ],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "references": [
    {
      "path": "packages/pob-test-typescript-package-in-monorepo/tsconfig.build.json"
    }
  ],

  "typedocOptions": {
    "entryPoints": [
      "packages/pob-test-typescript-package-in-monorepo/src/index.ts"
    ],
    "exclude": ["**/*.test.ts", "**/__tests__/**"],
    "readme": "README.md",
    "out": "docs",
    "excludePrivate": true,
    "gitRevision": "master"
  }
}
