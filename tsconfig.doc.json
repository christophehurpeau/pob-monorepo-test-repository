{
  "include": ["packages/*/src/**/*.ts"],

  "exclude": [
    "**/node_modules/**",
    "**/src/**/*.test.ts",
    "**/src/**/__tests__/**"
  ],

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "references": [],

  "typedocOptions": {
    "entryPoints": [],
    "exclude": ["**/*.test.ts", "**/__tests__/**"],
    "readme": "README.md",
    "out": "docs",
    "excludePrivate": true,
    "gitRevision": "master"
  }
}
