{
  "name": "pob-monorepo-test-repository",
  "private": true,
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/pob-monorepo-test-repository.git",
  "homepage": "https://github.com/christophehurpeau/pob-monorepo-test-repository",
  "type": "module",
  "engines": {
    "node": ">=14.13.1"
  },
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "undefined && yarn run build:definitions && yarn run generate:docs",
    "build:definitions": "tsc -b tsconfig.build.json",
    "checks": "node scripts/check-packages.js",
    "generate:api": "typedoc --tsconfig tsconfig.doc.json",
    "generate:docs": "rm -Rf docs ; yarn run generate:api ; touch docs/.nojekyll && yarn run generate:test-coverage",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "prettier --check .",
    "postinstall": "pob-root-postinstall",
    "test": "yarn workspaces foreach --parallel -Av run test",
    "tsc": "tsc -b"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "devDependencies": {
    "@pob/commitlint-config": "4.1.0",
    "@pob/eslint-config": "48.0.5",
    "@pob/lerna-light": "5.1.0",
    "@pob/root": "6.2.1",
    "@types/jest": "27.4.0",
    "eslint": "8.6.0",
    "jest": "27.4.5",
    "pob-lcov-reporter": "6.0.1",
    "prettier": "2.5.1",
    "typedoc": "0.22.10",
    "typescript": "4.5.4"
  }
}
