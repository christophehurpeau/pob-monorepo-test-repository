{
  "name": "pob-monorepo-test-repository",
  "private": true,
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": "https://github.com/christophehurpeau/pob-monorepo-test-repository.git",
  "homepage": "https://github.com/christophehurpeau/pob-monorepo-test-repository",
  "type": "module",
  "engines": {
    "node": ">=14.13.1"
  },
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological-dev -Av run build && yarn run build:definitions && yarn run generate:docs",
    "build:definitions": "tsc -b tsconfig.build.json",
    "checks": "node scripts/check-packages.js",
    "generate:api": "typedoc --tsconfig tsconfig.doc.json",
    "generate:docs": "rm -Rf docs ; yarn run generate:api ; touch docs/.nojekyll",
    "generate:test-coverage": "rm -Rf docs/coverage/ ; NODE_ENV=production BABEL_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=pob-lcov-reporter --coverageDirectory=docs/coverage/",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "prettier --check .",
    "postinstall": "pob-root-postinstall",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "tsc": "tsc -b",
    "watch": "yarn workspaces foreach --parallel --jobs unlimited --interlaced --exclude \"*-example\" -Av run watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/packages/*/(src|lib)/**/__tests__/**/*.(ts|js|cjs|mjs)",
      "<rootDir>/packages/*/(src|lib)/**/*.test.(ts|js|cjs|mjs)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "devDependencies": {
    "@pob/commitlint-config": "4.1.0",
    "@pob/eslint-config": "48.0.5",
    "@pob/eslint-config-typescript": "48.0.6",
    "@pob/lerna-light": "5.1.0",
    "@pob/root": "6.3.2",
    "@types/jest": "27.4.0",
    "check-package-dependencies": "3.1.0",
    "eslint": "8.8.0",
    "jest": "27.4.7",
    "pob-lcov-reporter": "6.0.1",
    "prettier": "2.5.1",
    "typedoc": "0.22.11",
    "typescript": "4.5.5"
  }
}
